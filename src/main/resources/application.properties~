# Properti aplikasi
spring.application.name=spring-oauth2

# Properti Spring MVC
spring.mvc.throw-exception-if-no-handler-found=true
spring.resources.add-mappings=false

# Properti JWT yang mengambil nilai dari rsa-key.properties
jwt.private.key=classpath:app.key
jwt.public.key=classpath:app.pub

# Properti OAuth2
auth.github.url=/oauth2/authorization/github
auth.oauth2.redirectUrl=http://localhost:5500/callback/oauth2   

# Properti JPA
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver
spring.datasource.username=root
spring.datasource.password=Revanagi33*
spring.datasource.url=jdbc:mysql://localhost:3337/spring_security
spring.datasource.type=com.zaxxer.hikari.HikariDataSource
spring.datasource.hikari.minimum-idle=5
spring.datasource.hikari.maximum-pool-size=10

# Mengatur level logging untuk JPA
spring.jpa.properties.hibernate.show_sql=true
spring.jpa.properties.hibernate.format_sql=true

# Mengatur level logging untuk Spring Security
logging.level.org.springframework.security=DEBUG
logging.level.org.springframework.security.web.access=DEBUG
logging.level.org.springframework.security.authentication=DEBUG

# Aktifkan logging untuk debug JWT dan OAuth2
logging.level.org.springframework.security.oauth2=DEBUG
logging.level.org.springframework.security.oauth2.server.resource=DEBUG
logging.level.org.springframework.security.web=DEBUG


# Github OAuth2
spring.security.oauth2.client.registration.github.client-id=Iv23liCnpDuWJri8mHm2
spring.security.oauth2.client.registration.github.client-secret=8165ca1b98d304be445a18d41b736ca6bc87b248
spring.security.oauth2.client.registration.github.scope=read:user,user:email




